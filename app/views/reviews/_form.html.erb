<div class="flex justify-center items-center">
  <%= form_with(model: [product, review]) do |form| %>
    <div class="flex justify-start items-center space-x-4 mt-2">
      <div class="flex items-center space-x-2">
        <%= form.label :rating, class: 'inline mb-2 text-sm font-medium text-gray-600' %>
        <div class="flex flex-col items-center justify-centers">
          <%= form.select :rating, Review.ratings.keys.map { |key| [key.humanize, key] }, { include_blank: true }, { class: "bg-gray-100 #{review.errors[:rating].empty? && 'border-none'} hover:bg-gray-100 focus:ring-gray-400 ring-inset #{text_field_css(review, :rating)}" } %>
          <%= inline_errors(review, :rating) %>
        </div>
      </div>
      <div class="flex items-center space-x-2">
        <%= form.label :title, class: 'inline mb-2 text-sm font-medium text-gray-600' %>
        <div class="flex flex-col items-center justify-centers">
          <%= form.text_field :title, class: "p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 #{text_field_css(review, :title)}", placeholder: 'Summary' %>
          <%= inline_errors(review, :title) %>
        </div>
      </div>
      <div class="flex items-center space-x-2">
        <%= form.label :comment, class: 'inline mb-2 text-sm font-medium text-gray-600' %>
        <div class="flex flex-col items-center justify-centers">
          <%= form.text_field :comment, class: "p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 #{text_field_css(review, :comment)}", placeholder: 'Leave a comment...' %>
          <%= inline_errors(review, :comment) %>
        </div>
      </div>
      <div class="flex items-center space-x-2">
        <div class="bg-primary border border-primary text-white px-2 py-2 font-medium	text-xs rounded uppercase flex items-center hover:bg-transparent hover:text-primary transition" >
          <%= form.submit %>
        </div>
      </div>
      <%= link_to "Cancel", "#", class: "bg-gray-600 border border-gray-600 text-white px-2 py-2 font-medium	text-xs rounded uppercase flex items-center hover:bg-transparent hover:text-primary transition" %>
    </div>
  <% end %>
</div>
