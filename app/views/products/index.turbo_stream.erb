<%= turbo_stream.update "products" do %>
  <% if @products.present? %>
    <div class="grid md:grid-cols-3 grid-cols-2 gap-6">
      <%= render @products %>
    </div>
    <% if @pagy.pages > 1 %>
      <%== pagy_nav(@pagy) %>
    <% end %>
  <% else %>
    <%= render "products/no_product_found" %>
  <% end %>
<% end %>