<!-- shop wrapper -->
<section class="container grid md:grid-cols-4 grid-cols-2 gap-6 pt-16 pb-16 items-start">
  <%= render "shared/category_filters" %>

  <!-- products -->
  <main class="col-span-3">
    <%= turbo_frame_tag "products", class: 'flex flex-col items-center' do %>
      <% if @products.present? %>
        <div class="grid md:grid-cols-3 grid-cols-2 gap-6">
          <%= render @products %>
        </div>
        <%== pagy_nav(@pagy) %>
      <% else %>
        <%= render "products/no_product_found" %>
      <% end %>
    <% end %>
  </main>
  <!-- ./products -->
</section>
<!-- ./shop wrapper -->
